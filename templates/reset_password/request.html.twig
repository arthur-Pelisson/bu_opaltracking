{% extends 'base.html.twig' %}
{% set coloredPage = true %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <div style="height: 100vh;" class="d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-8">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="h2 mb-3 font-weight-normal text-center">Reset your password</h2>
                            {% for flashError in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}

                            {{ form_start(requestForm) }}
                            <div class="mb-3">
                                <label for="inputEmail">Email</label>
                                <input type="email" id="reset_password_request_form_email" name="reset_password_request_form[email]" class="form-control" required autofocus>
                            </div>
                            <div>
                                <small>
                                    Enter your email address and we we will send you a
                                    link to reset your password.
                                </small>
                            </div>

                            <div class="row justify-content-between mt-5">
                                <div class="col-md-auto">
                                    <button class="btn btn-primary">Send password reset email</button>
                                </div>
                                <div class="col-md-auto">
                                    <a href="{{ path('app_login') }}" class="btn btn-hover">Get back to login page</a>
                                </div>
                            </div>
                            {{ form_row(requestForm._token) }}

                            {#                            {{ form_end(requestForm) }}#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
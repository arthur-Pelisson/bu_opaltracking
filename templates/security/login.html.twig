{% extends 'base.html.twig' %}
{% set coloredPage = true %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <div style="height: 100vh;" class="d-flex align-items-center">
        <div class="container"  style="min-width:350px">
            <div class="row justify-content-center">
                <div class="col-md-10 col-sm-12 min-w-sm-50">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="h2 mb-3 font-weight-normal text-center">Opal Tracking Orders</h2>
                            <form method="post">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                <div class="mb-3">
                                    <label for="inputEmail">Email</label>
                                    <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                                </div>
                                <div class="mb-3">
                                    <label for="inputPassword">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                                #}


                                <div class="row justify-content-between">
                                    <div class="col-md-auto">
                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-auto">
                                        <a class="btn btn-hover" href="{{ path('app_forgot_password_request') }}">Forgot your password or first connection ?</a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col text-center">
                                        <button class="btn btn-lg btn-primary" type="submit">
                                            Log in
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
